extends ../layouts/common

block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error	
	form(method="POST")
		.form-group
			label.ml-5(for="email") Email
			input#email.form-control.ml-5(name="email" type="text" value=values ? values.email : '')
		.form-group
			label.ml-5(for="password") Password
			input#password.form-control.ml-5(name="password" type="password" value=values ? values.password : '')
		button.btn.btn-primary.ml-5 Login
